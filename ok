<!DOCTYPE html>
<html>
  <head>
    <title>FitTrack</title>
    <style>
      body {
        font-family: Arial;
        padding: 20px;
        background-image: ;
      }
      input,
      button {
        padding: 6px;
        margin: 4px 0;
      }
      .item {
        padding: 8px;
        border: 1px solid #ccc;
        margin: 5px 0;
      }
      .done {
        text-decoration: line-through;
        color: gray;
      }
    </style>
  </head>
  <body>
    <h2>FitTrack</h2>

    <label>Activity:</label><br />
    <input id="activity" placeholder="e.g. Walk 20 mins" /><br />
    <button onclick="addItem()">Add</button>

    <h3>Activities</h3>
    <div id="list"></div>

    <script>
      let items = JSON.parse(localStorage.getItem("fittrack") || "[]");

      function save() {
        localStorage.setItem("fittrack", JSON.stringify(items));
      }

      function addItem() {
        const text = document.getElementById("activity").value;
        if (!text) return;

        items.push({ text: text, done: false });
        document.getElementById("activity").value = "";
        save();
        render();
      }

      function toggle(i) {
        items[i].done = !items[i].done;
        save();
        render();
      }

      // Delete item
      function remove(i) {
        items.splice(i, 1);
        save();
        render();
      }

      function render() {
        const list = document.getElementById("list");
        list.innerHTML = "";
        items.forEach((item, i) => {
          list.innerHTML += `
      <div class="item ${item.done ? "done" : ""}">
        ${item.text}
        <button onclick="toggle(${i})">✔</button>
        <button onclick="remove(${i})">✖</button>
      </div>
    `;
        });
      }

      render();
    </script>
  </body>
</html>
